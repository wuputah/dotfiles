# vim:ft=sh:

# rr will search upwards and return you to your root of your project.
function rr {
  old_pwd=$PWD
  while true; do
    if [ -f .git ]; then
      return 0
    elif [ $PWD = "/" ]; then
      echo "Rails root not found"
      cd $old_pwd
      return 1
    else
      cd ..
    fi
  done
}

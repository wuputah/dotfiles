[user]
	name = Jonathan Dance

[core]
	excludesfile = ~/.gitconfig-gitignore

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[alias]
	ci = commit
	co = checkout
	lg = log --stat --abbrev-commit

[rerere]
	enabled = true

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"

[github]
	user = wuputah

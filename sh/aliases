# vim:ft=sh:

os=`uname -s | tr "[:upper:]" "[:lower:]"`
if [ "$SSH_CLIENT" = "" ]; then loc=local; else loc=remote; fi
if [ -d "$HOME/bin/dotfiles/sh/$os" -a -f "$HOME/bin/dotfiles/sh/$os/aliases" ]; then
  source $HOME/bin/dotfiles/sh/$os/aliases
fi
if [ -d "$HOME/bin/dotfiles/sh/$os-$loc" -a -f "$HOME/bin/dotfiles/sh/$os-$loc/aliases" ]; then
  source $HOME/bin/dotfiles/sh/$os-$loc/aliases
fi

# System-wide aliases
alias c='clear'
alias x='exit'
alias b='cd -'  # back
alias u='cd ..' # up
alias psa='ps wwwax'

alias sd='sudo'
alias du1='du -h -d 1'
function pd () { if [ $# -gt 0 ]; then pushd $1 >/dev/null; else pushd $PWD >/dev/null; fi }
alias bd='popd >/dev/null'
alias my='mysql'
alias myd='mysqldump'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias a='ack'
alias aa='ack -a'
alias ac='grep -r'
alias ff='find . | ack'
alias l='less'

# executes the first argument on each of the arguments that follow
function each () {
  for f in "${@:2:$#}" ; do eval $1 \"$f\" ; done
}

alias unrarall='each "unrar e"'

# git
alias g='git'
alias gst='git status'
function gl () {
  git pull $@ && git submodule init && git submodule update
}
alias gp='git push'
alias gpo='git push origin'
alias gph='git push heroku'
function gpb () { git push $@ >$HOME/.git-deploys/`ruby -e "puts Time.now.to_f"`.log 2>&1 & }
alias gg='git log --stat --abbrev-commit'
function gd () {
  git diff $@ | mvim -
}
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gcm='git commit -v --amend'
alias gcma='git commit -v -a --amend'
alias gb='git branch -a'
alias gco='git checkout'
alias gf='git fetch'
alias grb='git rebase'
alias ga='git add'

alias ghot='git flow hotfix'
alias grel='git flow release'
alias gfeat='git flow feature'

# rvm
alias gemset='rvm gemset'
alias gs='rvm gemset'
alias gsu='rvm gemset use'

alias h='heroku'
alias bu='bundle'

# ruby/rails
alias r='ruby'
alias irb='ripl'
function rails() { if [ -x script/rails ]; then script/rails $@; else command rails $@; fi }
function cucumber() { if [ -d .bundle ]; then bundle exec cucumber $@; else command cucumber $@; fi }
function sp() { if [ -d .bundle ]; then bundle exec rspec $@; else command rspec $@; fi }
function rake() { if [ -d .bundle ]; then bundle exec rake $@; else command rake $@; fi }
alias sc='ripl rails'
alias ss='rails server'
alias db='rails dbconsole'
# we pushd/popd so you can execute these from anywhere and your working directory is preserved.
function mi() { pd; rr && rake db:migrate $@; bd; }
function ra() { pd; rr && rake $@; bd; }
function rs() { pd; rr && rails $@; bd; }

alias lg='lightning'
alias lgr='lightning-reload'

alias happyface='echo :\}'
alias sadface='echo :{'
